<script>
    var obj = @Html.Raw(Json.Encode(Model));
    if (obj.City == "Taguig City"){
        window.document.getElementById('City').selectedIndex = 0;
    }else if (obj.City == "Makati City"){
        window.document.getElementById('City').selectedIndex = 1;
    }else if (obj.City == "Muntinlupa City"){
        window.document.getElementById('City').selectedIndex = 2;
    }else if (obj.City == "Paranaque City"){
        window.document.getElementById('City').selectedIndex = 3;
    }else if (obj.City == "Pasay City"){
        window.document.getElementById('City').selectedIndex = 4;
    }
</script>