            </dd>

            <dt >
                <br />
                @Html.DisplayNameFor(model => model.Contact)
            </dt>

            <dd >
                <br />
                @Html.DisplayFor(model => model.Contact)
            </dd>

            <dt >
                <br />
                @Html.DisplayNameFor(model => model.Gas_Level)
            </dt>

            @if (int.Parse(Model.Gas_Level) <= 250)
            {
                <dd style="color:#295c0a;font-weight:bold;">
                    <br />
                    @Html.DisplayFor(model => model.Gas_Level)
                </dd>
            }
            else if (int.Parse(Model.Gas_Level) >= 251 && int.Parse(Model.Gas_Level) <= 450)
            {
                <dd style="color:#c77b04;font-weight:bold;">
                    <br />
                    @Html.DisplayFor(model => model.Gas_Level)
                </dd>
            }
            else
            {
                <dd style="color:red;font-weight:bold;">
                    <br />
                    @Html.DisplayFor(model => model.Gas_Level)
                </dd>
            }




            <dt >
                <br />
                @Html.DisplayNameFor(model => model.Heat_Level)
            </dt>

            @if (int.Parse(Model.Heat_Level) <= 250)
            {
                <dd style="color:#295c0a;font-weight:bold;">
                    <br />
                    @Html.DisplayFor(model => model.Heat_Level)
                </dd>
            }
            else if (int.Parse(Model.Heat_Level) >= 251 && int.Parse(Model.Heat_Level) <= 450)
