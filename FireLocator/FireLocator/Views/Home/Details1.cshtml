                @Html.DisplayFor(model => model.Longhitude)
            </dd>

        </dl>
    </div>
    <p style="font-family:'Century Gothic';font-size:15px;">
        @Html.ActionLink("Edit", "Edit1", new { id = Model.Item }) |
        @Html.ActionLink("Back to List", "Dashboard")
