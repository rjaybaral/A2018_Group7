<div class="container">
    <h2>User Information</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt >
                @Html.DisplayNameFor(model => model.Fullname)
            </dt>

            <dd >
                @Html.DisplayFor(model => model.Fullname)
            </dd>

            <dt >
                <br />
