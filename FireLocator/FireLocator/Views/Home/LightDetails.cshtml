@model FireLocator.Models.Victim_Info

@{
    ViewBag.Title = "LightDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Fire Victim Information</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ID_victim)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID_victim)
        </dd>

        <dt>
            <br />
            @Html.DisplayNameFor(model => model.Item)
        </dt>

        <dd>
            <br />
            @Html.DisplayFor(model => model.Item)
        </dd>

        <dt>
            <br />
            @Html.DisplayNameFor(model => model.Fullname)
        </dt>

        <dd>
            <br />
            @Html.DisplayFor(model => model.Fullname)
        </dd>

        <dt>
            <br />
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            <br />
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            <br />
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            <br />
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            <br />
            @Html.DisplayNameFor(model => model.Latitude)
        </dt>

        <dd>
            <br />
            @Html.DisplayFor(model => model.Latitude)
        </dd>

        <dt>
            <br />
            @Html.DisplayNameFor(model => model.Longhitude)
        </dt>

        <dd>
            <br />
            @Html.DisplayFor(model => model.Longhitude)
        </dd>

        <dt>
            <br />
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        @if (Model.Status.Equals("Heavy"))
        {
            <dd style="color:red; font-weight:bold;">
                <br />
                @Html.DisplayFor(model => model.Status)
            </dd>
        }
        else
        {
            <dd style="color:#c6b601; font-weight:bold;">
                <br />
                @Html.DisplayFor(model => model.Status)
            </dd>
        }

        <dt>
            <br />
            @Html.DisplayNameFor(model => model.Reason)
        </dt>

        <dd>
            <br />
            @Html.DisplayFor(model => model.Reason)
        </dd>

    </dl>
    <p style="font-family:'Century Gothic';font-size:15px;">
        @Html.ActionLink("Edit", "LightEdit", new { id = Model.ID_victim }) |
        @Html.ActionLink("Back to List", "LightList")
    </p>


    <div id="googleMap" style="width:100%;height:600px; margin-top:50px;">

    </div>
    <script language="javascript">
        function myMap() {
            var data = @Html.Raw(Json.Encode(Model));
            if (data!=null){
                var lat = parseFloat(@Model.Latitude);
                var long = parseFloat(@Model.Longhitude);
                var mapProp= {
                    center: new google.maps.LatLng(lat, long),
                    zoom:14,
                };
                var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);
                var marker = new google.maps.Marker({ position: { lat: lat, lng: long }, map: map });
            }
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBtAUTCi3y1Jw7m8qeugkCTal4jwO345sY&callback=myMap"></script>


</div>
