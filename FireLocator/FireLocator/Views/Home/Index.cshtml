                    <input type="submit" class="btn btn-primary" value="Register">

                    <input type="hidden" class="form-control" value="0" name="Heat_Level">
                    <input type="hidden" class="form-control" value="0" name="Latitude">
                    <input type="hidden" class="form-control" value="0" name="Longhitude">
                    <input type="hidden" class="form-control" value="No Gas Detect!" name="Gas_Status">
                </div>
                </form>
                <div class="col-sm-4">
                    <div id="googleMap" style="width:100%;height:400px;">

                    </div>

                    <script>
                        function myMap() {
                            var mapProp = {
                                center: new google.maps.LatLng(51.508742, -0.120850),
                                zoom: 5,
                            };
                            var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);
                        }
                    </script>

                    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBtAUTCi3y1Jw7m8qeugkCTal4jwO345sY&callback=myMap"></script>

                </div>
</div>
    </div>

    <!-- Modal -->
